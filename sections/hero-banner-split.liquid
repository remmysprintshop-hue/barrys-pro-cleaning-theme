{% comment %}
  Split hero banner with image left/right, editable heading and two CTAs.
  Keep it simple and Dawn-compatible.
{% endcomment %}
<section class="section hero-split" style="background: {{ section.settings.bg | default: '#f7f7f7' }}">
  <div class="page-width">
    <div class="grid grid--1-col grid--2-col-tablet">
      <div class="grid__item">
        {% if section.settings.image != blank %}
          <div class="hero-split__image-wrapper">
            {{ section.settings.image | image_url: width: 1200 | image_tag: loading: 'lazy', class: 'hero-split__image' }}
          </div>
        {% endif %}
      </div>
      <div class="grid__item">
        <div class="hero-split__content">
          {% if section.settings.preheading != blank %}
            <p class="hero-split__eyebrow">{{ section.settings.preheading }}</p>
          {% endif %}
          <h1 class="h0">{{ section.settings.heading | default: 'Bringing Shine to Your Space' }}</h1>
          {% if section.settings.subheading != blank %}
            <p class="hero-split__subtext">{{ section.settings.subheading }}</p>
          {% endif %}
          <div class="hero-split__ctas">
            {% if section.settings.cta1_label != blank and section.settings.cta1_link != blank %}
              <a href="{{ section.settings.cta1_link }}" class="button button--primary" style="background: {{ section.settings.cta1_color }}; border-color: {{ section.settings.cta1_color }}">
                {{ section.settings.cta1_label }}
              </a>
            {% endif %}
            {% if section.settings.cta2_label != blank and section.settings.cta2_link != blank %}
              <a href="{{ section.settings.cta2_link }}" class="button" style="color:#0a2141; border-color:#0a2141">
                {{ section.settings.cta2_label }}
              </a>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
.hero-split { padding: 48px 0; }
.hero-split__image { width: 100%; height:auto; border-radius: 12px; }
.hero-split__eyebrow { text-transform: uppercase; letter-spacing:.06em; color:#6b7280; margin:0 0 8px }
.hero-split__subtext { color:#374151; max-width: 48ch }
.hero-split__ctas { display:flex; gap:12px; margin-top: 16px; flex-wrap:wrap }
</style>

{% schema %}
{
  "name": "Hero split",
  "settings": [
    { "type":"text", "id":"preheading", "label":"Preheading", "default":"San Diego â€¢ Residential & Commercial" },
    { "type":"text", "id":"heading", "label":"Heading", "default":"Bringing Shine to Your Space" },
    { "type":"textarea", "id":"subheading", "label":"Subheading", "default": "Professional, insured, background-checked cleaners. Flat-rate packages. 100% Satisfaction Guarantee." },
    { "type":"image_picker", "id":"image", "label":"Image" },
    { "type":"color", "id":"bg", "label":"Background color", "default":"#f7f7f7" },

    { "type":"text", "id":"cta1_label", "label":"CTA 1 label", "default":"Request a Quote" },
    { "type":"url", "id":"cta1_link", "label":"CTA 1 link", "default":"/pages/request-a-quote" },
    { "type":"color", "id":"cta1_color", "label":"CTA 1 color", "default":"#ff7a00" },

    { "type":"text", "id":"cta2_label", "label":"CTA 2 label", "default":"Call Now" },
    { "type":"url", "id":"cta2_link", "label":"CTA 2 link", "default":"tel:6198001453" }
  ],
  "presets":[ { "name":"Hero split" } ]
}
{% endschema %}
