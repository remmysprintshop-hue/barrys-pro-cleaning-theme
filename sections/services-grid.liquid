<section class="section services-section">
  <div class="page-width">
    <div class="section-header text-center">
      <h2 class="h2">{{ section.settings.heading | default: 'Our Cleaning Services' }}</h2>
      {% if section.settings.subheading != blank %}
        <p>{{ section.settings.subheading }}</p>
      {% endif %}
    </div>
    <div class="services-grid">
      {% for block in section.blocks %}
        {% if block.type == 'service_card' %}
          <div class="service-card">
            {% if block.settings.icon != blank %}
              <div class="service-card__icon" style="font-size:2rem; margin-bottom:8px;">{{ block.settings.icon }}</div>
            {% endif %}
            <h3 class="h4">{{ block.settings.title }}</h3>
            {% if block.settings.description != blank %}
              <p>{{ block.settings.description }}</p>
            {% endif %}
            {% if block.settings.link_text and block.settings.link_url %}
              <a href="{{ block.settings.link_url }}" class="link">{{ block.settings.link_text }}</a>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Services grid",
  "settings": [
    { "type":"text", "id":"heading", "label":"Heading", "default":"Our Cleaning Services" },
    { "type":"textarea", "id":"subheading", "label":"Subheading", "default":"Professional cleaning services for every need" }
  ],
  "blocks": [
    { "type":"service_card", "name":"Service card", "settings":[
      { "type":"text", "id":"icon", "label":"Icon (emoji or text)", "default":"üè†" },
      { "type":"text", "id":"title", "label":"Title", "default":"House & Apartment Cleaning" },
      { "type":"textarea", "id":"description", "label":"Description", "default":"Weekly / Biweekly, one-time." },
      { "type":"text", "id":"link_text", "label":"Link text" },
      { "type":"url", "id":"link_url", "label":"Link URL" }
    ]}
  ],
  "presets": [{ "name":"Services grid", "blocks":[
    {"type":"service_card"}, {"type":"service_card"}, {"type":"service_card"}, {"type":"service_card"},
    {"type":"service_card"}, {"type":"service_card"}, {"type":"service_card"}, {"type":"service_card"}
  ]}]
}
{% endschema %}
