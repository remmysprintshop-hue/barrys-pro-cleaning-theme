<section class="section why-contact">
  <div class="page-width">
    <div class="grid grid--1-col grid--2-col-tablet">
      <div class="grid__item">
        <h2 class="h2">{{ section.settings.title | default: "Why choose Barry's Pro Cleaning?" }}</h2>
        <ul class="why-contact__bullets">
          {% for block in section.blocks %}
            {% if block.type == 'bullet' %}
              <li>{{ block.settings.text }}</li>
            {% endif %}
          {% endfor %}
        </ul>
        {% if section.settings.about_label and section.settings.about_url %}
          <a class="link animate-arrow" href="{{ section.settings.about_url }}">{{ section.settings.about_label }} →</a>
        {% endif %}
      </div>
      <div class="grid__item">
        <h3 class="h3">{{ section.settings.form_heading | default: "Instant Quote Request" }}</h3>
        <div id="cde0e6c9-6256-4c85-812a-cc4f328218f9"></div>
        <link rel="stylesheet" href="https://d3ey4dbjkt2f6s.cloudfront.net/assets/external/work_request_embed.css" media="screen" />
        <script src="https://d3ey4dbjkt2f6s.cloudfront.net/assets/static_link/work_request_embed_snippet.js"
          clienthub_id="cde0e6c9-6256-4c85-812a-cc4f328218f9"
          form_url="https://clienthub.getjobber.com/client_hubs/cde0e6c9-6256-4c85-812a-cc4f328218f9/public/work_request/embedded_work_request_form">
        </script>
        {% if section.settings.disclaimer != blank %}
          <p class="why-contact__disclaimer">{{ section.settings.disclaimer }}</p>
        {% endif %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Why + Quote form",
  "settings": [
    { "type":"text", "id":"title", "label":"Left heading", "default":"Why choose Barry's Pro Cleaning?" },
    { "type":"text", "id":"about_label", "label":"About link label", "default":"Learn More — About Us" },
    { "type":"url", "id":"about_url", "label":"About link URL", "default":"/pages/about" },
    { "type":"text", "id":"form_heading", "label":"Form heading", "default":"Instant Quote Request" },
    { "type":"textarea", "id":"disclaimer", "label":"Disclaimer", "default":"You agree to receive promotional messages from Barry's Pro Cleaning LLC. You also agree to our Terms of Service and Privacy Policy. Msg Frequency varies. Msg and Data Rates may apply. Reply STOP to end or HELP for Help." }
  ],
  "blocks":[
    { "type":"bullet","name":"Bullet","settings":[{ "type":"text","id":"text","label":"Text","default":"Locally owned & operated" }]},
    { "type":"bullet","name":"Bullet","settings":[{ "type":"text","id":"text","label":"Text","default":"Background-checked, insured cleaners" }]},
    { "type":"bullet","name":"Bullet","settings":[{ "type":"text","id":"text","label":"Text","default":"No hourly surprises — Flat rate packages" }]},
    { "type":"bullet","name":"Bullet","settings":[{ "type":"text","id":"text","label":"Text","default":"100% Satisfaction Guarantee" }]}
  ],
  "presets":[{ "name":"Why + Quote form", "blocks":[{"type":"bullet"},{"type":"bullet"},{"type":"bullet"},{"type":"bullet"}]}]
}
{% endschema %}
